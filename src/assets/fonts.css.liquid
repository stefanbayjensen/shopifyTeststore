{% comment %}
  Use this file for handling Custom Fonts, don't add fonts.
  We don't support importing fonts from the Shopify pipeline
  so you have to do it here.
{% endcomment %}

@font-face {
    font-family: 'Cerebri Sans';
    src: url({{ 'cerebrisans-semibold.woff2' | asset_url }}) format('woff2'),
         url({{ 'cerebrisans-semibold.woff' | asset_url }}) format('woff');
    font-weight: 600;
    font-style: normal;
}

